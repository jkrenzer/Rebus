#ifndef ACTIONS_HPP
#define ACTIONS_HPP
#include <iostream>

namespace Rebus
{
    class PrintAction
    {
    public:

        template <typename Type>
        void operator()(Type& ref, const std::string& name)
        {
            std::cout << name << ": " << ref << std::endl;
        }
    };
    
}
#endif
