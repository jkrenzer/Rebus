#ifndef ACTION_HPP
#define ACTION_HPP
#include <iostream>

namespace Rebus
{
    namespace Action
    {
        class Print
        {
        public:

            template <typename Type>
            void operator()(Type& ref, const std::string& name)
            {
                std::cout << name << ": " << ref << std::endl;
            }
        };
    }
}
#endif
